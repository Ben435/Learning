{
  "name": "api-gateway-wss",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:connect": "(export PROJECT=connect; npm run lambda-package)",
    "build:default": "(export PROJECT=default; npm run lambda-package)",
    "lambda-package": "cd src/${PROJECT} && zip -r ../../out/${PROJECT}.zip * && cd ../..",
    "stack:package": "aws cloudformation package --template-file template.yml --s3-bucket deploy-temp --output-template-file package.yml",
    "stack:deploy": "aws cloudformation deploy --template-file package.yml --stack-name api-gateway-wss",
    "stack:delete": "aws cloudformation delete-stack --stack-name api-gateway-wss",
    "deploy": "npm-run-all build stack:package stack:deploy"
  },
  "author": "Ben Clare",
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "wscat": "^4.0.0"
  }
}
